displayString -replace
              -value "Add the selected nodes as influences."
              m_brEditWeightsServer.kAddInfluence;

displayString -replace
              -value "The overall scale for all influences with no individual scale value."
              m_brEditWeightsServer.kGlobalInfluenceScale;

displayString -replace
              -value "The overall radius for all influences with no individual radius value."
              m_brEditWeightsServer.kGlobalRadius;

displayString -replace
              -value "The overall scale for all weights."
              m_brEditWeightsServer.kGlobalScale;

displayString -replace
              -value "Active state of the influence."
              m_brEditWeightsServer.kInfluenceActive;

displayString -replace
              -value "Edit to rename the influence. RMB to select."
              m_brEditWeightsServer.kInfluenceName;

displayString -replace
              -value "Individual radius value for the influence. Use -1 to use the global radius instead."
              m_brEditWeightsServer.kInfluenceRadius;

displayString -replace
              -value ("Individual scale value for the influence. This value gets multiplied with the " +
                      "global influence scale.")
              m_brEditWeightsServer.kInfluenceScale;

displayString -replace
              -value "Remove the influence from the weights server node."
              m_brEditWeightsServer.kInfluenceRemove;

displayString -replace
              -value "Set the current position as the rest position for the influence."
              m_brEditWeightsServer.kInfluenceSetRest;

displayString -replace
              -value "Use the shape node as the source of the influence instead of the transform."
              m_brEditWeightsServer.kInfluenceUseShape;

displayString -replace
              -value "Use the world space position of the influence."
              m_brEditWeightsServer.kInfluenceWorldSpace;

displayString -replace
              -value "Invert the weights for all channels."
              m_brEditWeightsServer.kInvert;

